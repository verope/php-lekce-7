{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pages</th>
                <th>Author</th>
                <th>PublishedYear</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.id }}</td>
                <td>{{ book.pages }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.publishedYear }}</td>
                <td>{{ book.price }}</td>
                <td>
                    <a href="{{ path('book_show', {'id': book.id}) }}">show</a>
                    <a href="{{ path('book_edit', {'id': book.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('book_new') }}">Create new</a>
    <hr>
    <a href="{{ path('book_listing_newbooks') }}">New books</a><br>
    <a href="{{ path('book_listing_price') }}">Order by price</a><br>    
    <a href="{{ path('book_listing_author') }}">Order by author</a><br>    
    <a href="{{ path('book_listing_century') }}">Order by century</a><br>

    
{% endblock %}
